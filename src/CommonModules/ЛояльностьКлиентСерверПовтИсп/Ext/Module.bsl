Функция СоответствиеЗаголовковПлашек_Активная(МестоРеализации = Неопределено) Экспорт 
	
	Результат = Новый Соответствие;
	Результат.Вставить(7, "Показать все ПП");
	Если МестоРеализации = ПредопределенноеЗначение("Справочник.МестаРеализации.Ресторан") Тогда
		Результат.Вставить(8, "Показать рецепты INSPIRED");
	Иначе	
		Результат.Вставить(8, "Показать 
								|ЛУЧший покупатель");
	КонецЕсли;
	Результат.Вставить(9, "Расчет
							|КеГЛей");
	Результат.Вставить(10, "Показать СПИСАНИЕ");
	Результат.Вставить(11, "Скрыть перс. данные");
	Результат.Вставить(12, "Показать АКЦИИ");
	
	Возврат Результат;
	
КонецФункции

