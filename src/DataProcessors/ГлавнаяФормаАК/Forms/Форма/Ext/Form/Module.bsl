&НаКлиенте
Процедура ЗаписатьЗаказ(Статус, Заказ)
	//:Заказ = Документы.Заказ.СоздатьДокумент();
	ЗаказСсылка = Заказ.Ссылка;
	Попытка
		ЗарегистрироватьСобытие("Изменение статуса заказа", УровеньЖурналаРегистрации.Информация,,ЗаказСсылка, Статус);	
	Исключение
	КонецПопытки;
	
	Заказ.Записать();
	
	НЗ = РегистрыСведений.ЗаказДопИнф.СоздатьНаборЗаписей();
	НЗ.Отбор.Заказ.Установить(ЗаказСсылка);
	НЗ.Прочитать();
	
	Если НЗ.Количество() Тогда
		ЗаписьРегистра = НЗ[0];
	Иначе 
	КонецЕсли;
	
	ЗаписьРегистра.Статус = Статус;
	Если Статус <> Перечисления.СтатусыЗаказа.Открыт Тогда
		ЗаписьРегистра.ДатаЗакрытия = ТекущаяДатаСеансаНаСервере();
		Если ЗначениеЗаполнено(Заказ.КартаДоступа) Тогда
			ксТрактир.ОсвободитьКартуДоступа(Заказ.КартаДоступа);
		КонецЕсли;
	Иначе
		Если ЗначениеЗаполнено(Заказ.КартаДоступа) Тогда
			ксТрактир.РегистрацияЗаказаПоКартеДоступа(Заказ.КартаДоступа, ЗаказСсылка);
		КонецЕсли;
	КонецЕсли;
	
	НЗ.Записать(Истина);	
	
	Если Статус = ПредопределенноеЗначение("Перечисление.СтатусыЗаказа.Закрыт") Тогда
		Если глПараметрыРМ.ТипТТ = ПредопределенноеЗначение("Справочник.ТипыТТ.КМ") 
			ИЛИ глПараметрыРМ.ТипТТ = ПредопределенноеЗначение("Справочник.ТипыТТ.МОКП") Тогда
			
			ЗарегистрироватьСобытие("Лояльность.ЗакрытиеЗаказа.До вызова", УровеньЖурналаРегистрации.Информация, , Заказ.Ссылка);
			ЛояльностьКлиент.ЗакрытьЗаказ(Заказ, ПротоколРасчетов);
			Заказ.Записать();
			ЗарегистрироватьСобытие("Лояльность.ЗакрытиеЗаказа.После вызова", УровеньЖурналаРегистрации.Информация, , Заказ.Ссылка);
		КонецЕсли;
		ксТрактир.ОсвободитьКартуДоступаОтЗаказа(ЗаказСсылка);
		Если глПараметрыРМ.ТипТТ = ПредопределенноеЗначение("Справочник.ТипыТТ.Ресторан") Тогда
// чек уже распечатан			Обработки.ГлавнаяФормаАК.ПечатьПодвалаЛояльности(глРабочееМесто.Фирма, глПараметрыРМ.ККМ, ЗаказСсылка, ПротоколРасчетов);
		ИначеЕсли НЕ флЗавершениеПоТаймауту Тогда
			Обработки.ГлавнаяФормаАК.ПечатьПодвалаЛояльности(, глПараметрыРМ.ККМ, ЗаказСсылка);
		КонецЕсли;
	КонецЕсли;
	
КонецПроцедуры

&НаКлиенте
Процедура УстановитьККМВТаблицыФормы(ККМ_Ссылка)
	
	СтрокаМестаРеализации = МестаРеализации.НайтиСтроки(Новый Структура("Фирма", ККМ_Ссылка.Фирма));
	Для каждого ТекСтрока Из СтрокаМестаРеализации Цикл
		ТекСтрока.ККМ = ККМ_Ссылка;
		ТекСтрока.ДопПорядок = 1;
	КонецЦикла;
	СтрокаТовары = ТаблицаТовары.НайтиСтроки(Новый Структура("Фирма", ККМ_Ссылка.Фирма));
	Для каждого ТекСтрока Из СтрокаТовары Цикл
		ТекСтрока.ККМ = ККМ_Ссылка;
	КонецЦикла;
	
КонецПроцедуры

