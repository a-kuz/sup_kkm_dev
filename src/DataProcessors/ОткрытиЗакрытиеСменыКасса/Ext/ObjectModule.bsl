	Иначе
		ККМ = глПараметрыРМ.ККМСписокДоп[0].Значение.ПолучитьОбъект();
	КонецЕсли;
	Обработка_ККМ=Обработка_ККМ;
	ИнициализацияТО(ККМ,Обработка_ККМ,глПараметрыРМ);
	ВхПараметры = новый Структура;
	ВыхПараметры = новый Структура;
	
