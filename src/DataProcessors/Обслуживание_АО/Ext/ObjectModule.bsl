	Если РаботаСокнами = Неопределено Тогда
		
		Попытка
			AHK = Новый COMОбъект("AutoHotkey.Script.Unicode");
		Исключение
		КонецПопытки;
		
		Если AHK = Неопределено Тогда
			Попытка
				AHK = Новый COMОбъект("AutoHotkey.Script");	
			Исключение
			КонецПопытки;
			
			
		КонецЕсли;
	Иначе
		AHK = РаботаСокнами.AHK();	
