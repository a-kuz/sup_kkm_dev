		ТекСтрока.НаименованиеДляКнопки		= ""+ТекСтрока.Товар + " - " + ТекСтрока.Цена+" "+Символ(8381);// + " (" + ТекСтрока.Количество + ")";//?(ТипЗнч(ТекЗнач)=Тип("СправочникСсылка.Пейджеры"),""+ТекЗнач+"/"+ТекЗнач.НаборПейджеров,ТекЗнач);
		ТекСтрока.ГоризонтальноеПоложение	= ГоризонтальноеПоложение.Лево;
		ТекСтрока.МаксКоличество 			= ТекСтрока.Количество;
		ТекСтрока.Выбран = 1;
	КонецЦикла;
	
	ТипЗначенийВыбора = ТипЗнч( ТаблицаВыбора[ТаблицаВыбора.Количество()-1].Значение );
	
	НазначитьЗаголовки("Подарки", "Добавить следующие товары по акции?");
		
	ЗаполнитьТаблицуСОднойКолонкой();
	ОпределитьКолвоСтраниц();
	
